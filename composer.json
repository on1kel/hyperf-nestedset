{
  "name": "on1kel/hyperf-nestedset",
  "description": "Multi-Treeструктуры для Hyperf (реализация модели вложенных наборов)",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "hyperf",
    "nestedset",
    "nested-set",
    "tree",
    "multi-tree",
    "hierarchy"
  ],
  "require": {
    "php": "^8.2",
    "hyperf/database": "^3.1",
    "hyperf/db-connection": "^3.1",
    "hyperf/event": "^3.1",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "hyperf/framework": "^3.1",
    "friendsofphp/php-cs-fixer": "^3.0",
    "hyperf/testing": "^3.1",
    "phpstan/phpstan": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "On1kel\\NestedSet\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "On1kel\\NestedSet\\Tests\\": "tests/"
    }
  },
  "extra": {
    "hyperf": {
      "config": "On1kel\\NestedSet\\ConfigProvider"
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress",
    "format": "vendor/bin/php-cs-fixer fix --config cs_dist.php --allow-risky=yes --show-progress=none",
    "test": "vendor/bin/phpunit --no-coverage --testdox"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
